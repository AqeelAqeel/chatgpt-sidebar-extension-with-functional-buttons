{
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [
        "content_script.css"
      ],
      "js": [
        "content_script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "This extension loads ChatGPT in the current tab, allowing you to use ChatGPT along your working session.",
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png",
    "512": "icon512.png"
  },
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "0.1.0",
  "web_accessible_resources": [
    {
      "extension_ids": [],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "assets/*"
      ]
    }
  ]
}
